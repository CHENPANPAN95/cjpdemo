<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_corner">

    <com.amap.api.maps.MapView
        android:id="@+id/fragment_left_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.amap.api.maps.MapView>

    <LinearLayout
        android:id="@+id/my_layout_2"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:orientation="vertical"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/bt_daolujiuyuan_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/daolujiuyuan_selector" />

    <ImageButton
        android:layout_marginTop="5dp"
        android:id="@+id/bt_shigubaoan_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shigubaoan_selector" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/ib_dingwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dingwei_selector" />

    <ImageButton
        android:layout_margin="5dp"
        android:id="@+id/bt_moshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/xunhang_moshi"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>