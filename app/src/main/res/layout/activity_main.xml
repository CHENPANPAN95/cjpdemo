<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing"
    android:orientation="horizontal"
    android:paddingTop="25dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"


    tools:context="com.hrht.cjp.homeview.view.MainActivity">


    <fragment
        android:id="@+id/fragment_left"
        android:name="com.hrht.cjp.homeview.view.MapFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="830"></fragment>

    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="337">

        <fragment
            android:id="@+id/fragment_right"
            android:name="com.hrht.cjp.homeview.view.Home_Fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></fragment>
    </LinearLayout>

</LinearLayout>


