<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="163"
        android:background="@mipmap/background_home"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="22:22"
                    android:textColor="#fff"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/iv_tianqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_time"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/tv_tianqi"
                    android:src="@mipmap/xiayun" />

                <TextView
                    android:id="@+id/tv_tianqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_time"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="阵雨，13°"
                    android:textColor="#fff"
                    android:textSize="17sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:layout_marginRight="10dp"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/laba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:src="@mipmap/laba" />

                <TextView
                    android:id="@+id/tv_xianxingtz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/laba"

                    android:text="长江大桥、长江二桥"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_xianxing_riqi"

                    android:text="今日限号："
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_xianxing_riqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="单号"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </RelativeLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/white_line" />

        <HorizontalScrollView

            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="3">

            <LinearLayout

                android:id="@+id/id_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bt_1_weizhang"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/weizhang_selector" />

                <ImageButton
                    android:id="@+id/bt_2_qunzu"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/qunzu_selector" />
                <ImageButton
                    android:id="@+id/bt_3_dianhua"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dianhua_selector" />


                <ImageButton
                    android:id="@+id/bt_4_xiaoxi"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/xiaoxi_selector" />
                <ImageButton
                    android:id="@+id/bt_5_tongbu"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tongbu_selector" />
                <ImageButton
                    android:id="@+id/bt_5_xiaoxi"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shezhi_selector" />

            </LinearLayout>


        </HorizontalScrollView>


    </LinearLayout>
</LinearLayout>
